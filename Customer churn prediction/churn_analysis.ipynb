# Cell 1: Import Libraries
import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns
from sklearn.model_selection import train_test_split
from sklearn.preprocessing import StandardScaler
import warnings
warnings.filterwarnings('ignore')

# Set style
sns.set_style('whitegrid')
plt.rcParams['figure.figsize'] = (12, 6)

# Cell 2: Load Data
df = pd.read_csv('../data/customer_churn.csv')
print("Dataset Shape:", df.shape)
print("\nFirst 5 rows:")
df.head()

# Cell 3: Basic Information
print("Dataset Info:")
print(df.info())
print("\nMissing Values:")
print(df.isnull().sum())
print("\nBasic Statistics:")
df.describe()

# Cell 4: Target Variable Distribution
target_col = 'Churn'  # Change based on your dataset

plt.figure(figsize=(10, 5))

# Count plot
plt.subplot(1, 2, 1)
df[target_col].value_counts().plot(kind='bar', color=['green', 'red'])
plt.title('Churn Distribution')
plt.xlabel('Churn Status')
plt.ylabel('Count')
plt.xticks(rotation=0)

# Pie chart
plt.subplot(1, 2, 2)
df[target_col].value_counts().plot(kind='pie', autopct='%1.1f%%', colors=['green', 'red'])
plt.title('Churn Percentage')
plt.ylabel('')

plt.tight_layout()
plt.show()

print(f"\nChurn Rate: {df[target_col].mean()*100:.2f}%")

# Cell 5: Numerical Features Analysis
numerical_cols = df.select_dtypes(include=['int64', 'float64']).columns
numerical_cols = [col for col in numerical_cols if col != target_col]

# Distribution plots
fig, axes = plt.subplots(3, 3, figsize=(15, 12))
axes = axes.ravel()

for idx, col in enumerate(numerical_cols[:9]):
    df[col].hist(bins=30, ax=axes[idx], edgecolor='black')
    axes[idx].set_title(f'Distribution of {col}')
    axes[idx].set_xlabel(col)
    axes[idx].set_ylabel('Frequency')

plt.tight_layout()
plt.show()

# Cell 6: Categorical Features Analysis
categorical_cols = df.select_dtypes(include=['object']).columns

if len(categorical_cols) > 0:
    fig, axes = plt.subplots(2, 2, figsize=(14, 10))
    axes = axes.ravel()
    
    for idx, col in enumerate(categorical_cols[:4]):
        df[col].value_counts().plot(kind='bar', ax=axes[idx], color='skyblue')
        axes[idx].set_title(f'{col} Distribution')
        axes[idx].set_xlabel(col)
        axes[idx].set_ylabel('Count')
        axes[idx].tick_params(axis='x', rotation=45)
    
    plt.tight_layout()
    plt.show()

# Cell 7: Correlation Heatmap
plt.figure(figsize=(12, 10))
correlation = df[numerical_cols].corr()
sns.heatmap(correlation, annot=True, cmap='coolwarm', center=0, 
            square=True, linewidths=1, cbar_kws={"shrink": 0.8})
plt.title('Feature Correlation Heatmap')
plt.tight_layout()
plt.show()

# Cell 8: Churn Analysis by Features
# Age vs Churn
plt.figure(figsize=(14, 5))

plt.subplot(1, 3, 1)
df.boxplot(column='Age', by=target_col, ax=plt.gca())
plt.title('Age Distribution by Churn')
plt.suptitle('')

# Balance vs Churn
plt.subplot(1, 3, 2)
if 'Balance' in df.columns:
    df.boxplot(column='Balance', by=target_col, ax=plt.gca())
    plt.title('Balance Distribution by Churn')
    plt.suptitle('')

# Tenure vs Churn
plt.subplot(1, 3, 3)
if 'Tenure' in df.columns:
    df.boxplot(column='Tenure', by=target_col, ax=plt.gca())
    plt.title('Tenure Distribution by Churn')
    plt.suptitle('')

plt.tight_layout()
plt.show()

# Cell 9: Feature Importance (Quick Analysis)
from sklearn.ensemble import RandomForestClassifier

# Prepare data
X = df.drop(columns=[target_col])
y = df[target_col]

# Handle categorical variables
for col in X.select_dtypes(include=['object']).columns:
    X[col] = pd.Categorical(X[col]).codes

# Quick Random Forest
rf = RandomForestClassifier(n_estimators=100, random_state=42)
rf.fit(X, y)

# Plot feature importance
feature_importance = pd.DataFrame({
    'Feature': X.columns,
    'Importance': rf.feature_importances_
}).sort_values('Importance', ascending=False).head(10)

plt.figure(figsize=(10, 6))
plt.barh(feature_importance['Feature'], feature_importance['Importance'])
plt.xlabel('Importance')
plt.title('Top 10 Important Features')
plt.gca().invert_yaxis()
plt.tight_layout()
plt.show()

# Cell 10: Summary Statistics by Churn
print("Summary Statistics by Churn Status:")
print("="*60)
print(df.groupby(target_col)[numerical_cols[:5]].mean())